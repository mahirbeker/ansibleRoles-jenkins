pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/mahirbeker/ansibleRoles-jenkins.git'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                sh 'ansible-playbook byrole-playbook.yml'
            }
        }
    }
    
    post {
        success {
            echo 'Ansible playbook successfully executed.'
        }
        failure {
            echo 'Ansible playbook execution failed.'
        }
    }
}
